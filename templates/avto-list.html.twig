{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 100px;">
        <div class="avto-list">
            <div class="row">
                {% for post in posts %}
                    <div class="col-lg-4 avto">
                        <div class="card" style="width: 100%;">
                            <img style="{% if post.previewImage is null %}height: 220px;background: #e8e8e8;{% endif %}" src="{{ images ~ post.previewImage }}" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.aboutCar | slice(0, 100) }}</p>
                                <a href="#" class="btn btn-primary">Подробнее</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
